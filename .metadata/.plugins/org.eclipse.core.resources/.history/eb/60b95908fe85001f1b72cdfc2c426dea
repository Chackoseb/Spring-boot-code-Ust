spring:
  application:
    name: cloudgateway

  cloud:
    gateway:
      discovery:
        locator:
          enabled: true
      routes:
        - id: helloservice-route
          uri: lb://HELLOSERVICE
          predicates:
            - Path=/rest/service/**
            - Path=/test/**
        - id: factorialservice-route
          uri: http://localhost:8073
          predicates:
            - Path=/rest/factorial/**

server:
  port: 8072
  
management:
  endpoint:
    gateway:
      enabled: true