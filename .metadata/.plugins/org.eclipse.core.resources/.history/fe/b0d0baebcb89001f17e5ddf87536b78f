//		if(userOptional.isPresent()) {
//			HashMap<Integer, Documents> docsMap = userOptional.get().getDocuments();
//			for (Map.Entry<Integer, Documents> entry : docsMap.entrySet()) {
//		        Documents doc = entry.getValue();
//		        if (doc.getDocType().equals(docType)) {
//		            return doc;
//		        }
//		        
//		    }
//			return null;
//		}
//		else
//			return null;
//	}
	
	
	@PostMapping("/addUser")
	public User addNewUser(@RequestBody User newUser) {
		return userRepo.save(newUser);
	}
}
